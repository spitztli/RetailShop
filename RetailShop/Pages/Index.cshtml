<!--Geburtstag Anzeige-->
<div class="row align-items-end">
    @if (Model.Mitarbeiter.Count > 0)
    {
        <ul>
            @foreach (var person in Model.Mitarbeiter)
            {
                <h3>Happy Birthday, @person.Name!</h3>
            }
        </ul>
    }
    else
    {
        <p>Heute hat niemand Geburtstag.</p>
    }
</div>





