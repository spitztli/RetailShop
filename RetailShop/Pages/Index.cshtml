@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var heute = DateTime.Now.DayOfWeek;
    

}

<!--Mittagsliste Anzeige-->

<div class="col-5" style="display: inline-grid">
    <h4>Mittags Plan</h4>
    <table class="Mkomplett">
        <thead class="Mtabel">
            <tr>
                <th>Wer</th>
                <th>Zeit</th>
                <th>Optionen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Mlist)
            {
                <tr>
                    <td class="Namecol">@item.NameOne, @item.NameTwo</td>
                    <td class="Zeitcol">@item.Time</td>
                    <td class="Buttoncol">
                        <form method="post" class="p-2 btn-group" style="flex:0 0 25%" role="group">
                            <a class="btn btn-primary btn-sm" asp-page="./Mittagsliste/Edit" asp-route-id="@item.Id">Edit</a> 
                            <a class="btn btn-danger btn-sm" asp-page="./Mittagsliste/Delete" asp-route-id="@item.Id">Löschen</a>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


