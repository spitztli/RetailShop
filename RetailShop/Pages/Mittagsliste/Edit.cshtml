@page
@model RetailShop.Pages.Mittagsliste.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Bearbeiten</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mlist.Id" />
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Mlist.NameOne" class="form-control" />
                <span asp-validation-for="Mlist.NameOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Mlist.NameTwo" class="form-control" />
                <span asp-validation-for="Mlist.NameTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Zeit</label>
                <input asp-for="Mlist.Time" class="form-control" />
                <span asp-validation-for="Mlist.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
                <a class="btn btn-secondary" asp-page="/Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
