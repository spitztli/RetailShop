@page
@model RetailShop.Pages.Geburtstag.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Bearbeiten</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Glist.Id" />
            <div class="form-group">
                <label asp-for="Glist.Name" class="control-label"></label>
                <input asp-for="Glist.Name" class="form-control" />
                <span asp-validation-for="Glist.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Glist.Geburtstag" class="control-label"></label>
                <input asp-for="Glist.Geburtstag" type="date" class="form-control" />
                <span asp-validation-for="Glist.Geburtstag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
