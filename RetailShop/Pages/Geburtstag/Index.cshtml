@page
@model RetailShop.Pages.Geburtstag.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Burzeltag</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mitarbeiter[0].Vorname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mitarbeiter[0].Geburtstag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Mitarbeiter)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Vorname)
                </td>
                <td>
                    @item.Geburtstag.ToString("dd.MM")
                </td>
            </tr>
        }
    </tbody>
</table>
